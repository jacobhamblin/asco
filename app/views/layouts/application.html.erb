<!DOCTYPE html>
<html>
<head>
  <title>asco</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
  <script charset="utf-8">
    Asco.AUTH_TOKEN = "<%= form_authenticity_token %>";
  </script>
  <% if !!current_user %>
    <script>
      window.CURRENT_USER_ID = <%= current_user.id %>
      window.CURRENT_USER_USERNAME = "<%= current_user.username %>";
      window.CURRENT_USER_EMAIL = "<%= current_user.email %>";
    </script>
  <% end %>

  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,500' rel='stylesheet' type='text/css'>
</head>
<body>

  <%= render 'shared/navbar' %>

  <!-- <%= request.original_url %> -->

  <!-- !!(a =~ /\/images\/\d+/) -->
<%= yield %>

</body>
</html>
